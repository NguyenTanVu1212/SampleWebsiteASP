@model IEnumerable<FinalProject.Models.LogModel>

@{
    ViewData["Title"] = "Find";
    List<SelectListItem> keyItem = new List<SelectListItem>();
    keyItem.Add(new SelectListItem
    {
        Text = "ID",
        Value ="ID"
    }) ;
    keyItem.Add(new SelectListItem
    {
        Text = "Name",
        Value = "Name"
    });
    keyItem.Add(new SelectListItem
    {
        Text = "Time Enter",
        Value = "TimeEnter"
    });
}

<h1>Search Enter History</h1>
<div id="FindTaskBar">
    @using (Html.BeginForm("Find","Dashboard",FormMethod.Get))
            {        
                @Html.DropDownList("Key", keyItem, new { @class = "form-control" })
                @Html.TextBox("Values")
                <input type="submit" value="Search" />
            }
    

</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Temperature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeEnter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temperature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeEnter)
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to DashBoard</a>
</div>
