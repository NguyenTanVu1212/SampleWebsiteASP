@model FinalProject.Models.StaffModel

@{
    ViewData["Title"] = "AddNewStaff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add New Staff</h1>

<p>@ViewBag.ErrorMessage</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewStaff">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <input asp-for="Role" class="form-control" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Avarta" class="control-label"></label>
                <input asp-for="Avarta" class="form-control" />
                <span asp-validation-for="Avarta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to DashBoard</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
